# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True

# Application Mode
MODE=LOCAL

# OIDC Authentication Settings for U-M Shibboleth (only used when MODE=PROD)
# You'll need to register your app with U-M to get these credentials
OIDC_CLIENT_ID=your-app-client-id
OIDC_CLIENT_SECRET=your-app-client-secret

# U-M Shibboleth OIDC endpoints (from .well-known/openid-configuration)
OIDC_AUTHORIZATION_ENDPOINT=https://shibboleth.umich.edu/idp/profile/oidc/authorize
OIDC_TOKEN_ENDPOINT=https://shibboleth.umich.edu/idp/profile/oidc/token
OIDC_USER_ENDPOINT=https://shibboleth.umich.edu/idp/profile/oidc/userinfo
OIDC_JWKS_ENDPOINT=https://shibboleth.umich.edu/oidc/keyset.jwk

# Django Secret Key (generate a new one for production)
SECRET_KEY=your-secret-key-here

# Database Configuration
# Choose one of the following database engines:

# SQLite (default - built into Python, no additional setup needed)
DB_ENGINE=sqlite3
DB_NAME=db.sqlite3

# MySQL Configuration
# DB_ENGINE=mysql
# DB_NAME=your_database_name
# DB_USER=your_username
# DB_PASSWORD=your_password
# DB_HOST=your_host
# DB_PORT=3306

# PostgreSQL Configuration
# DB_ENGINE=postgresql
# DB_NAME=your_database_name
# DB_USER=your_username
# DB_PASSWORD=your_password
# DB_HOST=your_host
# DB_PORT=5432

# CORS Settings
# CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Email Configuration
DEFAULT_FROM_EMAIL=noreply@example.com
ADMIN_EMAILS=admin@example.com,admin2@example.com
